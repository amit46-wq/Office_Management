<%layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2 ">
            <h3>Employee Details</h3>
        </div>
    <div class="card col-6 offset-2 show-card">
        <img src="https://res.cloudinary.com/dnuhwt9dg/image/upload/v1749896635/profile_v1v2aj.jpg"  class="card-img-top show-img" alt="...">
        <div class="card-body">
            <p class="card-text">
                <b><li><%= employee.f_name %> <%= employee.l_name %></li></b>
                <li><%= employee.email %></li>
                <li><%= employee.job_title %></li>
                <li><%= employee.dept %></li>
                <li><%= employee.supervisor %></li>
                <li><%= employee.country %></li>
                <li><%= employee.state %></li>
                <li><%= employee.city %></li>
            </p>
  </div>
    </div>
    
    <br/>
   </div>
   <div class="btns">
        <a href="/employees/<%= employee._id %>/edit" class="btn btn-dark col-2 offset-2">Edit Details</a>

        <form method="POST" action="/employees/<%= employee._id %>?_method=DELETE">
        <button class="btn btn-dark offset-4">Delete</button>
        </form>
    </div>
    
</body>
